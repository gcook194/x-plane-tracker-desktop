<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<?import java.net.URL?>
<BorderPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.gav.xplanetracker.controller.FlightController">

    <stylesheets>
        <URL value="@dark-theme.css"/>
    </stylesheets>

    <!-- Top Navigation Bar -->
    <top>
        <HBox fx:id="navBar" styleClass="nav-bar" prefHeight="50" alignment="CENTER_LEFT" spacing="10">
            <Label text="âœˆ Flight Tracker" styleClass="nav-title"/>
            <Button text="Dashboard" styleClass="nav-button"/>
            <Button text="Settings" styleClass="nav-button"/>
        </HBox>
    </top>

    <!-- Main Layout -->
    <center>
        <HBox fx:id="rootBox">

            <!-- Left Panel (1/3 width) -->
            <VBox fx:id="leftPanel" styleClass="side-panel" maxWidth="Infinity">
                <Button fx:id="startFlight" text="Start Flight" onAction="#onStartFlightClick" styleClass="primary-button" maxWidth="Infinity"/>
                <Button fx:id="stopFlight" text="Stop Flight" onAction="#onStopFlightClick" visible="false" styleClass="primary-button" maxWidth="Infinity"/>

                <VBox fx:id="loadingBox" spacing="10" alignment="CENTER" visible="false" managed="false">
                    <ProgressIndicator fx:id="progressIndicator"/>
                    <Label text="Loading flight data..." />
                </VBox>

                <!-- GridPane for flight data -->
                <GridPane fx:id="flightDetailsBox" hgap="10" vgap="10" visible="false" managed="false">
                    <columnConstraints>
                        <ColumnConstraints halignment="RIGHT"/>
                        <ColumnConstraints/>
                    </columnConstraints>

                    <Label text="Flight Number:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="label-title"/>
                    <Label fx:id="flightNumber" GridPane.rowIndex="0" GridPane.columnIndex="1" styleClass="label-value"/>

                    <Label text="Departure Airport:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="label-title"/>
                    <Label fx:id="departureAirport" GridPane.rowIndex="1" GridPane.columnIndex="1" styleClass="label-value"/>

                    <Label text="Arrival Airport:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="label-title"/>
                    <Label fx:id="arrivalAirport" GridPane.rowIndex="2" GridPane.columnIndex="1" styleClass="label-value"/>

                    <Label text="Aircraft Type:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="label-title"/>
                    <Label fx:id="aircraftType" GridPane.rowIndex="3" GridPane.columnIndex="1" styleClass="label-value"/>

                    <Label text="Aircraft Reg:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="label-title"/>
                    <Label fx:id="aircraftReg" GridPane.rowIndex="4" GridPane.columnIndex="1" styleClass="label-value"/>
                </GridPane>

            </VBox>

            <!-- Right Panel (2/3 width - Map Panel) -->
            <VBox fx:id="mapPanel" styleClass="map-panel" HBox.hgrow="ALWAYS" VBox.vgrow="ALWAYS" xmlns:fx="http://javafx.com/fxml">
                <Label text="Map Panel (coming soon)" styleClass="panel-title"/>
            </VBox>

        </HBox>
    </center>
</BorderPane>
