<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.gav.xplanetracker.controller.SettingsController">
    <center>
        <StackPane>
            <HBox alignment="TOP_LEFT">
                <padding>
                    <Insets top="30" right="30" bottom="30" left="30"/>
                </padding>
                <VBox spacing="25" styleClass="side-panel" maxWidth="500" prefWidth="500">
                    <Label text="Application Settings" styleClass="panel-title"/>

                    <VBox spacing="8">
                        <Label text="SimBrief Username" styleClass="label-title"/>
                        <TextField fx:id="simbriefUsernameField"
                                   style="-fx-background-color: #3a3a3a; -fx-text-fill: white;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="X-Plane Host" styleClass="label-title"/>
                        <TextField fx:id="xplaneUriField"
                                   style="-fx-background-color: #3a3a3a; -fx-text-fill: white;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Monitor Screenshots?" styleClass="label-title"/>
                        <HBox spacing="20">
                            <RadioButton fx:id="screenshotsYes" text="Yes" style="-fx-text-fill: white;">
                                <toggleGroup>
                                    <ToggleGroup/>
                                </toggleGroup>
                            </RadioButton>
                            <RadioButton fx:id="screenshotsNo" text="No" style="-fx-text-fill: white;">
                                <toggleGroup>
                                    <ToggleGroup/>
                                </toggleGroup>
                            </RadioButton>
                        </HBox>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Screenshot Directory" styleClass="label-title"/>
                        <TextField fx:id="screenshotDirectoryField"
                                   style="-fx-background-color: #3a3a3a; -fx-text-fill: white;"/>
                    </VBox>

                    <VBox spacing="8">
                        <Label text="Use Navigraph API?" styleClass="label-title"/>
                        <HBox spacing="20">
                            <RadioButton fx:id="navigraphYes" text="Yes" style="-fx-text-fill: white;">
                                <toggleGroup>
                                    <ToggleGroup/>
                                </toggleGroup>
                            </RadioButton>
                            <RadioButton fx:id="navigraphNo" text="No" style="-fx-text-fill: white;">
                                <toggleGroup>
                                    <ToggleGroup/>
                                </toggleGroup>
                            </RadioButton>
                        </HBox>
                    </VBox>

                    <VBox spacing="8">
                        <padding>
                            <Insets top="10"/>
                        </padding>
                        <Button fx:id="saveButton"
                                text="Save Settings"
                                styleClass="primary-button"
                                onAction="#handleSaveClick"
                                maxWidth="200"/>
                    </VBox>
                </VBox>
            </HBox>
        </StackPane>
    </center>
</BorderPane>